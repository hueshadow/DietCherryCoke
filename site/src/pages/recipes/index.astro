---
import { getCollection } from 'astro:content';
import LandingLayout from '../../layouts/LandingLayout.astro';

const recipes = await getCollection('recipes', ({ data }) => !data.draft);
---

<LandingLayout
  title="Best Diet Cherry Coke Recipes — Cocktails, Floats & More"
  description="Discover delicious recipes made with Diet Cherry Coke. From classic floats to viral TikTok drinks and creative cocktails. Zero-guilt treats."
>
  <section slot="hero" class="bg-bg-secondary py-16 text-center">
    <div class="mx-auto max-w-3xl px-4">
      <h1 class="text-4xl font-bold leading-tight sm:text-5xl">
        <span class="text-accent">Diet Cherry Coke</span> Recipes
      </h1>
      <p class="mt-6 text-lg text-text-secondary">
        From classic cherry cola floats to viral TikTok drinks and creative cocktails — discover delicious ways to enjoy Diet Cherry Coke.
      </p>
    </div>
  </section>

  <!-- Recipe Cards -->
  {recipes.length > 0 ? (
    <section class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {recipes.map((recipe) => (
        <a
          href={`/recipes/${recipe.id}`}
          class="group rounded-lg border border-border bg-bg-card p-6 no-underline transition-colors hover:border-accent"
        >
          <p class="text-xs uppercase tracking-wider text-text-muted">{recipe.data.category}</p>
          <h2 class="mt-2 text-lg font-semibold text-text-primary group-hover:text-accent">
            {recipe.data.title}
          </h2>
          <p class="mt-2 text-sm text-text-secondary">{recipe.data.description}</p>
          <div class="mt-4 flex gap-4 text-xs text-text-muted">
            <span>Prep: {recipe.data.prepTime.replace('PT', '').replace('M', ' min')}</span>
            <span>Serves: {recipe.data.servings}</span>
          </div>
        </a>
      ))}
    </section>
  ) : (
    <p class="text-text-secondary">Recipes coming soon! Check back for delicious Diet Cherry Coke recipes.</p>
  )}

  <!-- CTA -->
  <section class="mt-12 rounded-lg border border-border bg-bg-card p-8 text-center">
    <h2 class="text-xl font-bold">Need Diet Cherry Coke for Your Recipe?</h2>
    <p class="mt-2 text-text-secondary">Find it at a store near you.</p>
    <a
      href="/where-to-buy"
      class="mt-4 inline-block rounded-lg bg-accent-btn px-6 py-3 font-semibold text-white no-underline transition-colors hover:bg-accent-btn-hover"
    >
      Where to Buy
    </a>
  </section>
</LandingLayout>
