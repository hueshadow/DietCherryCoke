---
import { getCollection } from 'astro:content';
import LandingLayout from '../../layouts/LandingLayout.astro';

const comparisons = await getCollection('comparisons', ({ data }) => !data.draft);
---

<LandingLayout
  title="Diet Cherry Coke Comparisons â€” How It Stacks Up"
  description="Compare Diet Cherry Coke with other popular diet sodas. Side-by-side taste, nutrition, caffeine, and price comparisons."
>
  <section slot="hero" class="bg-bg-secondary py-16 text-center">
    <div class="mx-auto max-w-3xl px-4">
      <h1 class="text-4xl font-bold leading-tight sm:text-5xl">
        <span class="text-accent">Diet Cherry Coke</span> Comparisons
      </h1>
      <p class="mt-6 text-lg text-text-secondary">
        How does Diet Cherry Coke compare to other zero-calorie sodas? Find out with our detailed side-by-side comparisons.
      </p>
    </div>
  </section>

  <section class="grid gap-6 sm:grid-cols-2">
    {comparisons.map((comparison) => (
      <a
        href={`/compare/${comparison.id}`}
        class="group rounded-lg border border-border bg-bg-card p-6 no-underline transition-colors hover:border-accent"
      >
        <div class="flex items-center justify-between text-sm text-text-muted">
          <span>{comparison.data.productA.name}</span>
          <span class="font-bold text-accent">VS</span>
          <span>{comparison.data.productB.name}</span>
        </div>
        <h2 class="mt-3 text-lg font-semibold text-text-primary group-hover:text-accent">
          {comparison.data.title}
        </h2>
        <p class="mt-2 text-sm text-text-secondary">{comparison.data.description}</p>
      </a>
    ))}
  </section>
</LandingLayout>
