---
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: 'Content',
    links: [
      { label: 'Is It Back?', href: '/is-it-back' },
      { label: 'Where to Buy', href: '/where-to-buy' },
      { label: 'Nutrition Facts', href: '/nutrition' },
      { label: 'Recipes', href: '/recipes' },
    ],
  },
  {
    title: 'Compare',
    links: [
      { label: 'vs Diet Coke', href: '/compare/diet-cherry-coke-vs-diet-coke' },
      { label: 'vs Cherry Coke', href: '/compare/diet-cherry-coke-vs-cherry-coke' },
      { label: 'vs Cherry Coke Zero', href: '/compare/diet-cherry-coke-vs-coke-zero-cherry' },
      { label: 'vs Diet Dr Pepper', href: '/compare/diet-cherry-coke-vs-diet-dr-pepper' },
    ],
  },
  {
    title: 'Site',
    links: [
      { label: 'About', href: '/about' },
      { label: 'Privacy Policy', href: '/privacy' },
      { label: 'Contact', href: '/contact' },
    ],
  },
];
---

<footer class="border-t border-border bg-bg-secondary">
  <div class="mx-auto max-w-[1200px] px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Brand column -->
      <div>
        <a href="/" class="text-lg font-bold text-text-primary no-underline">
          Diet Cherry Coke
        </a>
        <p class="mt-3 text-sm text-text-secondary">
          Your go-to source for everything Diet Cherry Coke â€” availability, nutrition, recipes, and more.
        </p>
      </div>

      <!-- Link columns -->
      {footerLinks.map((group) => (
        <div>
          <h3 class="text-sm font-semibold uppercase tracking-wider text-text-muted">
            {group.title}
          </h3>
          <ul class="mt-3 space-y-2">
            {group.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-text-secondary no-underline transition-colors duration-250 hover:text-text-primary"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Newsletter placeholder -->
    <div class="mt-12 rounded-lg border border-border bg-bg-tertiary p-6">
      <h3 class="text-lg font-semibold text-text-primary">Stay Updated</h3>
      <p class="mt-1 text-sm text-text-secondary">
        Get notified about Diet Cherry Coke availability and news.
      </p>
      <!-- Newsletter form will be a React Island in Phase 4 -->
      <div class="mt-4 flex gap-3">
        <input
          type="email"
          placeholder="your@email.com"
          disabled
          class="flex-1 rounded-md border border-border bg-bg-primary px-4 py-2 text-sm text-text-primary placeholder:text-text-muted disabled:opacity-50"
        />
        <button
          disabled
          class="rounded-md bg-accent px-6 py-2 text-sm font-medium text-white disabled:opacity-50"
        >
          Subscribe
        </button>
      </div>
      <p class="mt-2 text-xs text-text-muted">Coming soon</p>
    </div>

    <!-- Disclaimer -->
    <div class="mt-12 border-t border-border pt-8 text-center text-xs text-text-muted">
      <p>
        &copy; {currentYear} dietcherrycoke.net. All rights reserved.
      </p>
      <p class="mt-2">
        Diet Cherry Coke is a registered trademark of The Coca-Cola Company.
        This site is not affiliated with or endorsed by The Coca-Cola Company.
      </p>
    </div>
  </div>
</footer>
