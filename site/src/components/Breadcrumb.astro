---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

const allItems = [{ label: 'Home', href: '/' }, ...items];
---

<nav aria-label="Breadcrumb">
  <ol class="flex flex-wrap items-center gap-1 text-sm text-text-secondary">
    {allItems.map((item, index) => (
      <li class="flex items-center gap-1">
        {index > 0 && (
          <span class="text-text-muted" aria-hidden="true">&gt;</span>
        )}
        {item.href && index < allItems.length - 1 ? (
          <a
            href={item.href}
            class="text-text-secondary no-underline transition-colors duration-250 hover:text-text-primary"
          >
            {item.label}
          </a>
        ) : (
          <span class="text-text-muted" aria-current="page">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
